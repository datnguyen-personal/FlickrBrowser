<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    android:layout_margin="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@color/colorPrimary">
            <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:radius="8dp"
                android:color="@android:color/darker_gray"
                android:layout_centerInParent="true"
                custom:dd_numDots="3"
                custom:dd_scaleMultiplier="1.5"
                custom:dd_animationDuration="500"
                custom:dd_horizontalSpacing="4dp"
                />
            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:id="@+id/lnDescriptionWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:background="#77000000"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="18sp"
                    android:text=""/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:padding="10dip">
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivProfile"
                android:layout_centerVertical="true"
                app:materialIcon="account_circle"
                app:materialIconColor="@color/colorPrimary"
                app:materialIconSize="30dip" />
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivProfile"
                android:layout_toLeftOf="@+id/tvTimeAgo"
                android:layout_marginLeft="10dip"
                android:textStyle="bold"
                android:textSize="18sp"
                android:ellipsize="end"
                android:text=""/>

            <!--android:layout_toRightOf="@+id/ivProfile"-->
            <TextView
                android:id="@+id/tvTimeAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dip"
                android:textSize="16sp"
                android:text=""/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvTags"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:padding="5dip"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:textColor="#aaaaaa"
            android:text="photoList, friends"/>
    </LinearLayout>
</android.support.v7.widget.CardView>