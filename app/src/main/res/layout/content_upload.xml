<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.sample.flickrbrowser.UploadActivity"
    tools:showIn="@layout/activity_upload">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dip"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lnFormView"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dip"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/metTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add title here"
                    app:met_baseColor="#666666"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_errorColor="#ddaa00"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="#666666"
                    app:met_floatingLabelText="Title"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/metDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dip"
                    android:layout_marginTop="15dip"
                    android:gravity="bottom"
                    android:singleLine="false"
                    android:hint="Add description here"
                    app:met_baseColor="#666666"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_errorColor="#ddaa00"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="#666666"
                    app:met_floatingLabelText="Description"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/metTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:hint="Add tags here, saperated by space"
                    app:met_baseColor="#666666"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_errorColor="#ddaa00"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="#666666"
                    app:met_floatingLabelText="Title"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_centerHorizontal="true">
                <com.dd.processbutton.iml.ActionProcessButton
                    android:id="@+id/btnUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="UPLOAD"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:pb_colorComplete="@color/colorPrimaryDark"
                    app:pb_colorNormal="@color/colorPrimaryDark"
                    app:pb_colorPressed="@color/colorPrimaryDarker"
                    app:pb_textComplete="SUCCESS"
                    app:pb_textProgress="UPLOADING..."
                    app:pb_textError="FAILED"
                    app:pb_colorError="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
